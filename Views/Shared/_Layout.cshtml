<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MachineLinkConfig</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/azerouno-theme.css" asp-append-version="true" />

</head>
<body>
    <header class="az-topbar">
        <div class="az-topbar-inner">
            <div class="az-brand">
                <img class="az-brand-logo" src="~/img/azerouno-logo.png" alt="Azerouno" />
                <div>
                    <div class="az-brand-title">Azerouno</div>
                    <div class="text-muted" style="font-size:12px;">Integrazioni 4.0 • Config Manager</div>
                </div>
                <span class="az-chip">Industry 4.0</span>
            </div>

            <div style="display:flex; gap:8px;">
                <a class="btn btn-dark btn-sm" href="/plugins">Plugins</a>
                <a class="btn btn-primary btn-sm" href="/plugins/import">Import</a>
            </div>
        </div>
    </header>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MachineLinkConfig</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MachineLinkConfig - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
